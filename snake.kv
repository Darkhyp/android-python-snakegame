<SnakePart>:
    id: SnakePart
    size: self.size

    canvas.before:
        Color:
            rgb: 1,1,1
        PushMatrix
        Rotate:
            angle: root.image_angle
            origin: root.image_center
        Rectangle:
            size: self.size
            pos: self.pos
            source: root.image_source
    canvas.after:
        PopMatrix


GameScreen:
    id: GameScreen
    score_label: score_label

    canvas:
        Color:
            rgb: 0.3,0.6,0.3
        Rectangle:
            size: self.size
            pos: self.pos
    Label:
        id: score_label
        text: "Score: " + str(self.parent.snake_length)
        width: self.width

    Widget:
        id:snack
        size: self.size
        pos: self.pos
        canvas:
            Color:
                rgb: 1,1,1
            Rectangle:
                size: self.size
                pos: self.pos
                source: f"assets/images/apple.png"

